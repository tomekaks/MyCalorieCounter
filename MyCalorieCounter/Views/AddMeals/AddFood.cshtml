@model MyCalorieCounter.Models.AddFoodVM

@{
    ViewData["Title"] = "Add Food";
}

<h1>Add Food</h1>


<hr />
<div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Calories)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Calories)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Proteins)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Proteins)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Carbs)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Carbs)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fats)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fats)
            </dd>
        </dl>
        <div class="col-sm-2">
            <form asp-action="AddFood">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="Weight" class="control-label">Weight in grams</label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-success" />
                </div>
            </form>
        </div>
        
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


