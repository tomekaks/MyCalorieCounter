@model MyCalorieCounter.Models.DailyGoalVM
@{
    ViewData["Title"] = "Update Goals";
}

<h1>Update Your Daily Goals</h1>

<br />
<br />

<div class="col-md-4">
    <form asp-action="UpdateGoals">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="UserId" />
        <div class="form-group">
            <label asp-for="Calories" class="control-label">Calories</label>
            <input asp-for="Calories" class="form-control" />
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Proteins" class="control-label">Proteins</label>
            <input asp-for="Proteins" class="form-control" />
            <span asp-validation-for="Proteins" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Carbs" class="control-label">Carbs</label>
            <input asp-for="Carbs" class="form-control" />
            <span asp-validation-for="Carbs" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fats" class="control-label">Fats</label>
            <input asp-for="Fats" class="form-control" />
            <span asp-validation-for="Fats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update Goals" class="btn btn-success" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
