@model MyCalorieCounter.Models.EditActivityVM

@{
    ViewData["Title"] = "EditActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Activity</h2>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaloriesBurned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaloriesBurned)
        </dd>
    </dl>
    <div class="col-md-2">
        <form asp-action="EditActivity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
