@model MyCalorieCounter.Models.AddActivityVM

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add an activity</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaloriesPerHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaloriesPerHour)
        </dd>
    </dl>
    <div class="col-sm-2">
        <form asp-action="AddActivity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ExerciseId" />
            <div class="form-group">
                <label asp-for="Minutes" class="control-label">Minutes</label>
                <input asp-for="Minutes" class="form-control" />
                <span asp-validation-for="Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
