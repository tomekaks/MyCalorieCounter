@model MyCalorieCounter.Models.ActivitiesVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Your Today's Activities</h1>


<table class="table">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Calories Per Hour</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Exercises)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.CaloriesPerHour)</td>
            <td>
                <a asp-action="AddActivity" asp-route-id="@item.Id" class="btn btn-success">Add</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>

}
